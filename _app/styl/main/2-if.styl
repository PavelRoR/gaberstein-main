.if-items
	width 100%
	max-width 900px
	margin 0 auto
	display flex
	align-items: flex-start
	justify-content space-between
	flex-direction row
	// &:last-of-type
	// 	justify-content: space-around
	@media screen and (max-width 991px)
		flex-wrap: wrap
		flex-direction: column
.if-item
	flex: 1 1 0px
	margin 0 auto 50px
	position relative
	z-index 30
	@media screen and (max-width 991px)
		margin-bottom: 30px
		width 100%
		max-width 560px
	@media screen and (max-width 560px)
		margin-bottom: 35px
		max-width none
	&-img
		display block
		margin 0 auto 10px
	&-text
		text-align center
		span
			font-weight: bold
