#main
	padding 10px 0 0
	background #F5F9F9 url(../img/backs/main.png) no-repeat center
	background-size: cover
	@media screen and (max-width 560px)
		text-align center
.main
	// &-logo
	// 	@media screen and (max-width 560px)
	// 		width 55px
	&-pre
		text-transform: uppercase;
		color: #656565;
		margin-top: 70px
		font-size: 25px
		span
			display inline-block
		@media screen and (max-width 991px)
			margin-top: 50px
		@media screen and (max-width 560px)
			font-size: 18px
			margin-top: 30px
	&-title
		font-family: ACC
		font-size: 110px;
		line-height: 100%;
		text-transform: uppercase;
		color: #5E5E5E;
		margin 20px 0 30px
		position relative
		z-index 9
		@media screen and (max-width 991px)
			font-size: 90px
		@media screen and (max-width 560px)
			font-size: 60px
			margin 10px 0 20px
		@media screen and (max-width 386px)
			font-size: 46px
	&-subtitle
		font-size: 20px
		color: #000;
		margin-bottom: 55px
		@media screen and (max-width 991px)
			margin-bottom: 25px
		@media screen and (max-width 386px)
			margin-bottom: 15px
	&-info
		position absolute
		display inline-block
		padding 30px 20px
		background-color #fff
		border-radius: 9px;
		text-align center
		top 0
		left 180px
		z-index 90
		@media screen and (max-width 991px)
			position: static
			margin-bottom: 35px
			border: 2px solid #F6A1A2
		@media screen and (max-width 560px)
			padding 20px
		&-date
			font-family: B
			font-size: 25px
			letter-spacing: 0.015em;
			text-transform: uppercase;
			color: #4D4D4D;
			@media screen and (max-width 560px)
				font-size: 20px
		&-text
			font-size: 16px
			letter-spacing: 0.015em;
			color: #4D4D4D;
		// &-img
		// 	display block
		// 	width auto
	&-img
		@media screen and (max-width 1199px)
			position relative
			left -50px
			top 0
		@media screen and (max-width 991px)
			width 100%
			max-width 756px
			margin 20px auto 0
			left auto
		@media screen and (max-width 386px)
			margin-top: 10px

#video
	padding 90px 0
	position relative
	background-image: linear-gradient(to bottom, #FBF3FF 0%, #fff 100%)
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 560px)
		padding 40px 0
.general-img-video
	width 100%
	top -12%
	left 0
	right 0
	display block
	margin 0 auto
	z-index 200
	@media screen and (max-width 1199px)
		top -10%
	@media screen and (max-width 991px)
		display none
.content-video
	z-index 300
.video-wrapper-video
	max-width 760px
	z-index 200
	