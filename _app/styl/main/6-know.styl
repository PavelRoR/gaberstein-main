#know
	padding 90px 0
	@media screen and (max-width 386px)
		padding 60px 0
.bc-col
	width 48%
	position relative
	float: left
	@media screen and (max-width 991px)
		float: none
		width 100%
		.button-wrapper
			text-align: center
	.button
		margin-top: 35px
		@media screen and (max-width 386px)
			margin-top: 0
	&:last-of-type
		float: right
		@media screen and (max-width 991px)
			float: none
		.bc-img-back
			right -100px
			left auto
			top -30px
			@media screen and (max-width 1199px)
				top 80px
			@media screen and (max-width 991px)
				display none
.bc-img-back
	position absolute
	top 0
	left 0
	right 0
	margin 0 auto
	display block
	z-index 0
.bc-img
	display block
	position absolute
	z-index 30
	top 60px
	bottom: 50%
	left 0
	@media screen and (max-width 1199px)
		width 100%
		top 250px
	@media screen and (max-width 991px)
		position: relative
		top 0
		right 0
		width 100%
		max-width 500px
		margin 55px auto 0
		@media screen and (max-width 386px)
			margin-top: 20px