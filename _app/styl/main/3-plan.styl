.plan-wrapper
	padding 75px 30px
	background: #E8F5FC url('../img/backs/plan.png') no-repeat center
	background-size cover
	border-radius: 30px
	overflow hidden
	margin 0 auto 90px
	width 100%
	max-width 1240px
	@media screen and (max-width 991px)
		padding 40px 30px
	@media screen and (max-width 767px)
		background: #E8F5FC
	@media screen and (max-width 560px)
		padding 30px 20px
	@media screen and (max-width 386px)
		padding 20px 15px
.general-title-plan
	margin-top: 90px
	@media screen and (max-width 1199px)
		margin-top: 0
.lesson
	margin-bottom: 20px
	display flex
	align-items: center
	justify-content: center
	flex-wrap: nowrap
	justify-content: flex-start
	@media screen and (max-width 560px)
		flex-wrap: wrap
		margin-bottom: 35px
	&-number
		width 100px
		height: 100px
		background: #EECCFF url(../img/backs/lesson.png) no-repeat right center;
		// background-size contain
		box-shadow: inset 0px 2px 15px rgba(255, 255, 255, 0.11), inset 19px 0px 25px rgba(255, 255, 255, 0.11);
		border-radius: 10px;
		text-align center
		display flex
		align-items: center
		justify-content: center
		flex-shrink: 0
		margin-right: 19px
		@media screen and (max-width 560px)
			margin-bottom: 10px
		&-title
			font-size: 50px
			font-weight: 700
			color #5E5E5E
			line-height: 1
			small
				display block
				font-size: 20px
				font-weight: normal
				text-transform uppercase
	&-info
		&-text
			span
				font-weight: 700
				display block
.plan-img
	display block
	width 100%
	max-width 383px
	margin 0 auto 55px
	@media screen and (max-width 991px)
		margin-top: 50px
	@media screen and (max-width 560px)
		margin 35px auto
.plan-item
	width 100%
	max-width 300px
	margin 0 auto 35px
	text-align center
	@media screen and (max-width 991px)
		&-1
			margin-top: 20px
	&-img
		display inline-block
		margin-bottom: 25px
	&-text
		// font-size: 20px
		font-weight: 700