.for-item
	background: radial-gradient(50% 50% at 50% 50%, #FFFFFF 0%, #F4F4F4 100%);
	border-radius: 10px;
	width 100%
	max-width 600px
	margin 30px auto
	position relative
	padding 30px 230px 30px 30px
	&-img
		position absolute
		bottom: 0
		right 5px
	&-list
		position relative
		z-index 20
		li
			list-style none
			margin-bottom: 10px
			span
				font-weight: 600
			&:last-child
				margin-bottom: 0
.formats
	width 100%
	max-width 1036px
	margin 0 0 0 auto
	display flex
	flex-direction: row
	align-items: flex-start
	justify-content: space-between
	&-title
		font-family: ACC
		font-size: 50px
		color #5E5E5E
		line-height: 58px
.format
	display flex
	flex-direction: column
	width 100%
	max-width 260px
	flex-basis: 25%
	&-text
		font-weight: 500
		text-align right
	&-item
		margin-bottom: 10px
		background-image: linear-gradient(90deg, #D7EEAC 0%, rgba(215, 238, 172, 0.45) 37.66%, rgba(215, 238, 172, 0.71) 96.01%);
		border-radius: 7px;
		text-align center
		display flex
		align-items: center
		justify-content: center
		padding 15px
		width 100%
		&-icon
			display inline-block
			margin-right: 5px
		&-text
			font-size: 20px
			font-weight: 600
			text-transform uppercase
	&:first-of-type
		width 100%
		max-width 216px
		align-self: center
		order 1
	&:nth-of-type(2)
		flex-direction: column-reverse