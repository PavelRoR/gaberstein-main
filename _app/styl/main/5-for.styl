#get
	position relative
	z-index 90
.get-items-container
	overflow hidden
.get-items
	width 300px
	float: left
	@media screen and (max-width 1199px)
		width 100%
		float: none
	&-1
		width calc(100% - 620px)
		@media screen and (max-width 1199px)
			width 100%
			float: none
	&-2
		margin 0 10px
		@media screen and (max-width 1199px)
			margin 0 0 10px
.get-item
	background: #F3F3F3;
	border-radius: 15px;
	padding 30px 20px
	overflow hidden
	position relative
	width 100%
	height: 100%
	margin-bottom: 10px
	@media screen and (max-width 1199px)
		padding 30px 20px 0
		// text-align center
	@media screen and (max-width 560px)
		padding 20px 20px 0
	&-3
	&-4
		text-align center
		@media screen and (max-width 1199px)
			text-align: left
	&-text
		font-size: 20px
		position relative
		z-index 10
		@media screen and (max-width 560px)
			font-size: 18px
		span
			font-weight: 700
			display block
			margin-bottom: 12px
	&-1
	&-2
		.get-item-text
			width 60%
			@media screen and (max-width 1199px)
				width 100%
				text-align right
	&-1
		.get-item-img
			width 230px
			@media screen and (max-width 1199px)
				margin-right -20px
	&-2
		.get-item-img
			width 205px
			right 10px
			@media screen and (max-width 1199px)
				margin-right: 0
	&-3
	&-4
		height: 560px
		@media screen and (max-width 1199px)
			height: auto
		.get-item-img
			width 240px
			left 0
			margin 0 auto
		@media screen and (max-width 1199px)
			.get-item-img
				margin-left 0
	&-img
		min-width: auto
		max-width 100%
		position absolute
		bottom: 0
		right 0
		z-index 0
		@media screen and (max-width 1199px)
			position: static
			display block
			margin 15px auto 0
.button-get
	margin-top: 50px