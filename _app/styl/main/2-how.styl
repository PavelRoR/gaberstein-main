#how
	padding 80px 0 150px
	@media screen and (max-width 1199px)
		padding 80px 0
	@media screen and (max-width 386px)
		padding 60px 0
.how-back
	position absolute
	left -40px
	right 0
	margin 0 auto
	width 100%
	height: auto
	bottom: -120px
	z-index -1
	@media screen and (max-width 1199px)
		bottom: 100px

.how-title
	font-family: ACC
	font-size: 80px;
	line-height: 80px;
	color: #5E5E5E;
	margin-bottom: 25px
	@media screen and (max-width 1199px)
		font-size: 65px
		line-height: 1.3
	@media screen and (max-width 991px)
		text-align center
	@media screen and (max-width 560px)
		font-size: 48px
		margin-bottom: 20px
	@media screen and (max-width 386px)
		font-size: 36px
.how-img
	display block
	width 100%
	// max-width 400px
	margin 43px auto 0
	@media screen and (max-width 991px)
		max-width 400px
		margin 25px auto 35px
.how-items
	display flex
	align-items: center
	justify-content: center
	flex-wrap: wrap
.how-item
	position relative
	padding 70px 30px 30px
	background-color: #FCF4FF;
	border-radius: 10px;
	width 100%
	max-width 400px
	margin 0 0 10%
	@media screen and (max-width 991px)
		margin 0 auto 20px
		max-width 100%
	@media screen and (max-width 386px)
		padding 30px 20px
	&-1
	&-2
		min-height 466px
		@media screen and (max-width 1199px)
			min-height 606px
		@media screen and (max-width 991px)
			min-height 1px
	&-3
	&-4
		min-height 353px
		@media screen and (max-width 1199px)
			min-height 409px
		@media screen and (max-width 991px)
			min-height 1px
	&-title
		position absolute
		font-family: ACC
		font-size: 100px;
		line-height: 100px;
		color: rgba(136, 64, 171, 0.21);
		top 30px
		right 30px
		@media screen and (max-width 991px)
			left 30px
		@media screen and (max-width 386px)
			position: static
			margin-bottom: 10px