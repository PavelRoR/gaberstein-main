#main
	padding 90px 0
	min-height calc(100vh - 61px)
	background: url(../img/backs/promo.png) no-repeat center
	background-size: cover
	@media screen and (max-width 1199px)
		text-align center
	@media screen and (max-width 767px)
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0
.general-img-main
	top -300px
	right -400px
.main
	&-subtitle
		font-size: 28px
		margin 30px 0
		span
			font-weight: bold
		@media screen and (max-width 560px)
			font-size: 24px
	&-text
		line-height: 140%
		margin-bottom: 20px
		font-size: 22px
		span
			display inline-block
			font-weight: 900
			color #7C2CA3
		@media screen and (max-width 386px)
			margin-bottom 15px
			font-size: 20px
.button-main:last-of-type
	margin-left: 10px
	@media screen and (max-width 991px)
		margin-left: 0
		margin-top: 10px
	@media screen and (max-width 386px)
		margin-top: 0