.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #282828;
		border-radius: 40px;
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
		@media screen and (max-width 560px)
			border-radius: 20px
.play-button
	width 90px
	height 90px
	background: linear-gradient(274.35deg, rgba(255, 255, 255, 0) 19.45%, rgba(255, 255, 255, 0.15) 40.13%, rgba(255, 255, 255, 0) 67.28%), linear-gradient(263.81deg, #AB53D8 10.32%, #75279C 98.17%);
	box-shadow: inset 0px 2px 15px rgba(255, 255, 255, 0.11), inset 19px 0px 25px rgba(255, 255, 255, 0.11);
	border-radius: 50%;
	position absolute
	top calc(50% - 45px)
	left 0
	right 0
	margin 0 auto
	cursor pointer
	transition: all .4s ease
	@media screen and (max-width 560px)
		width 40px
		height: 40px
		top calc(50% - 20px)
	&:after
		content: ''
		display block
		position absolute
		width 40px
		height: 40px
		left 36px
		top 26px
		// margin 0 auto
		border: 20px solid transparent
		border-left: 30px solid #DFDFDF
		@media screen and (max-width 560px)
			width 20px
			height: 20px
			border: 10px solid transparent
			border-left: 15px solid #DFDFDF
			top 23px
			left 27px
	&:hover
		opacity .9
	&&-rev
		width 72px
		height: 72px
		top calc(50% - 36px)
		@media screen and (max-width 560px)
			width 50px
			height: 50px
			top calc(50% - 25px)
		&:after
			width 20px
			height: 20px
			border: 10px solid transparent
			border-left: 15px solid #DFDFDF
			top 26px
			left 31px
			@media screen and (max-width 560px)
				top 16px
				left 21px
.button
	&-wrapper
		position relative
		&-center
			text-align center
	display inline-block
	margin 0 auto
	text-decoration none
	color: #DBDBDB
	width 100%
	max-width 370px
	height: 113px
	background: url(../img/backs/button.png) no-repeat center
	background-size contain
	// transform: matrix(-1, 0, 0, 1, 0, 0);
	// border-radius: 11px
	text-transform: uppercase;
	text-align center
	padding: 0 10px
	letter-spacing: 0.3em;
	font-weight: bold
	transition: all .9s ease
	position relative
	overflow hidden
	z-index 999
	@media screen and (max-width 560px)
		padding 30px 20px
		max-width 311px
		font-size: 14px
	&:focus
		text-decoration none
		color #DBDBDB
	&:hover
		transform: translateY(4px)
		text-decoration none
		color #DBDBDB
	span
		display flex
		align-items: center
		justify-content: center
		height: 100%;
		width: 100%;
.general-title
	text-align center
	font-family: ACC
	font-size: 50px
	text-transform uppercase
	color: #5E5E5E;
	margin-bottom: 40px
	line-height: 100%
	@media screen and (max-width 991px)
		font-size: 40px
	@media screen and (max-width 560px)
		font-size: 32px
		margin-bottom: 30px
	@media screen and (max-width 386px)
		font-size: 28px
	span
		color #B0CBAA
	small
		display block
		font-size: 30px
		@media screen and (max-width 991px)
			font-size: 20px
		@media screen and (max-width 560px)
			font-size: 18px
	&-left
		text-align left
		@media screen and (max-width 991px)
			text-align center
