header
	overflow hidden
	padding 20px 0
	// margin-bottom: 40px
	position absolute
	top 0
	left 0
	z-index 999
	transition: all .3s ease-in-out
	@media screen and (max-width 991px)
		width: 290px;
		height: 100%;
		background-color: #fff;
		padding: 20px;
		z-index: 190;
		top 0
		left: -100%
		transition: all .3s ease
		.container
			width 100%
	.&-row
		display flex
		align-items: center
		justify-content: space-between
		transition: all .3s ease-in-out
		&:first-of-type
			margin-bottom: 20px
		@media screen and (max-width 991px)
			display block
			margin-bottom: 10px
	&.fixed
		position: fixed
		top: 0
		left 0
		background-color rgba(#fff,.95)
		padding 10px
		.header-row:first-of-type
			margin-bottom: 10px
	&.nav-active
		left 0
		position fixed
.mobile-menu
	display: none;
	position: fixed;
	width: 30px;
	height: 25px;
	padding: 5px;
	top 30px
	right: calc(50% - 360px)
	cursor: pointer;
	z-index: 9999;
	@media screen and (max-width 750px)
		right 15px
	&-line
		width: 100%;
		height: 3px;
		background-color: #404040
		position: absolute;
		transition: all .4s ease
		left 0
		&-1
			top 0
			&.switched
				transform: rotate(45deg)
				top 13px
				right: 0;
				left: 0;
				width: 42px;
		&-2
			height: 2px;
			width 80%
			left auto
			right 0
			top calc(50% - 1px)
			&.switched
				opacity: 0;
		&-3
			bottom: 0
			&.switched
				transform: rotate(-45deg)
				top 13px
				left: 0;
				right: 0;
				width: 42px;
	@media screen and (max-width 991px)
		display block
.header-logo-mob
	display none
	@media screen and (max-width 991px)
		display block
		position absolute
		top: 20px
		left 0
.contact
	&s
		display flex
		@media screen and (max-width 991px)
			justify-content: flex-start
			flex-wrap: wrap
			margin-top: 10px
	display inline-block
	width 45px
	height: 45px
	background-image: url(../img/icons/soc.png)
	background-repeat: no-repeat
	background-position: 0 0
	margin-right: 10px
	transition: all .4s ease
	@media screen and (max-width 991px)
		margin: 10px 15px 0 0
	&:hover
		transform: scale(.9)
	&:last-of-type
		margin-right: 0
	&-yt
		background-position: -45px 0
	&-inst
		background-position: -90px 0
	&-fb
		background-position: -135px 0
	&-tt
		background-position: -180px 0
.main-menu
	display flex
	flex-direction: row
	align-items: flex-start
	justify-content: space-between
	flex-wrap: wrap
	list-style none
	width 100%
	position relative
	z-index 99
	@media screen and (max-width 991px)
		flex-direction: column
		margin-top:20px
	// 	justify-content: flex-start
	&-item
		margin-right 10px
		&:last-child
			margin-right: 0
		@media screen and (max-width 991px)
			margin-bottom: 5px
		a
			display block
			font-size: 14px
			font-weight: 500
			color #2E2E2E
			&:focus
				color #2E2E2E
				text-decoration none
			&:hover
			&.active
				color #8840AB
				text-decoration none