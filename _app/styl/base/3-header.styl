header
	overflow hidden
	padding 20px 0
	// margin-bottom: 40px
	position absolute
	top 0
	left 0
	z-index 999
	transition: all .3s ease-in-out
	.&-row
		display flex
		align-items: center
		justify-content: space-between
		transition: all .3s ease-in-out
		&:first-of-type
			margin-bottom: 20px
	&.fixed
		position: fixed
		top: 0
		left 0
		background-color rgba(#fff,.95)
		padding 10px
		.header-row:first-of-type
			margin-bottom: 10px
