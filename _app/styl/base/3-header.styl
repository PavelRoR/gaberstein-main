.contact
	&s
		display flex
	display inline-block
	width 45px
	height: 45px
	background-image: url(../img/icons/soc.png)
	background-repeat: no-repeat
	background-position: 0 0
	margin-left: 10px
	transition: all .4s ease
	&:hover
		transform: scale(.9)
	&:first-of-type
		margin-right: 0
	&-yt
		background-position: -45px 0
	&-inst
		background-position: -90px 0
.main-menu
	display flex
	flex-direction: row
	align-items: flex-start
	justify-content: space-around
	flex-wrap: wrap
	list-style none
	width 100%
	&-item
		a
			display block
			font-size: 14px
			font-weight: 500
			color #2E2E2E
			&:focus
				color #2E2E2E
				text-decoration none
			&:hover
				color #8840AB
				text-decoration none