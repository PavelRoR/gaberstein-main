#main
	padding 90px 0
	min-height calc(100vh - 61px)
	.container
		position relative
	@media screen and (max-width 767px)
		text-align center
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0
.general-img-main-1
	left -400px
	top -100px
	z-index -1
.general-img-main-2
	right -400px
	bottom -100px
	z-index -1
.main
	&-title
		font-family: ACC
		font-size: 42px
		line-height: 140%
		text-transform uppercase
		color #5E5E5E
		span
			color #7C2CA3
			display inline-block
		@media screen and (max-width 767px)
			font-size: 36px
		@media screen and (max-width 560px)
			font-size: 32px
		@media screen and (max-width 386px)
			font-size: 26px
	&-subtitle
		font-size: 24px
		font-weight: 500
		margin-top: 30px
		span
			display inline-block
			border-radius 5px
			background-color: yellow
			padding 0 5px
		@media screen and (max-width 560px)
			font-size: 20px
	&-text
		font-size: 24px
		margin: 50px 0 30px
		span
			display inline-block
			font-weight: bold
		@media screen and (max-width 767px)
			font-size: 20px
			margin 30px 0 20px
		@media screen and (max-width 386px)
			margin 10px 0 15px
.post-link
	display inline-block
	margin-right: 30px
	transition: all .3s ease-out
	&:last-child
		margin-right: 0
	&:hover
		transform: translateY(-8px)
	@media screen and (max-width 560px)
		margin-right: 15px
	@media screen and (max-width 386px)
		margin-right: 10px
.post-icon
	display block
	width 100%
	max-width 83px
	margin 0 auto
	@media screen and (max-width 560px)
		max-width 65px
	@media screen and (max-width 386px)
		max-width 45px